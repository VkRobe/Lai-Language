printSum(argA : int, argB : int) : int {
	print_i2("%d + %d", argA, argB)
	print(" = ")
	
	sum := argA + argB
	print_i1("%d", sum)
	
	print("\n")
}

recursiveMultiply(Av:int,Bv:int):int{
	
	tick(Av, 0, Bv)
	//print_i1("%d")
	
	globalVar = 0;
	
	localFunc():int{
		
	}
	
	tick(A:int, sumSoFar:int, ctr:int):int{
		print("Tick: ")
		print_i1("%d", sumSoFar)
		print("\n")
		
		sumSoFar = sumSoFar + 1
		
		ctr = ctr - 1
		
		//localFunc()
		tick(A, sumSoFar, ctr)
	}
}

